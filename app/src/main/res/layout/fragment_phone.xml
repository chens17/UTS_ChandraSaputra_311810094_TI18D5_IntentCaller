<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Intentcaller.Chandras.TI18D5.fragment.PhoneFragment">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:textSize="9pt"
                android:layout_weight="7.5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+62"/>

            <EditText
                android:id="@+id/edtNomorPonsel"
                android:inputType="number"
                android:textSize="9pt"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nomor Telpon/Ponsel"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCallNow"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Call Now"/>

            <Button
                android:id="@+id/btGoToApp"
                android:backgroundTint="#4F64D3"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Go to Contact App"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>